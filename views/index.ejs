<%- include('./partials/head') %>

<div class="container">
  <section class="card" id="card">
      <div class="card_inner">
          <article class="front">
              <button onclick="turn()">
                  click me <i class="fa-solid fa-angles-right"></i>
              </button>
              <header>
                  <h1><%= data.name %> <%= data.surname %></h1>
                  <p><%= data.bio %></p>
              </header>

              <ul class="socials">
                <% custom.forEach(item => { %>
                    <% if (item.title == 'Socials') { %>
                        <% item.content.forEach(social => { %>
                            <li>
                                <a href="<%= social.link %>" target="_blank"><i class="<%= social.icon %>"></i></a>
                            </li>
                        <% }) %>
                    <% } %>
                <% }) %>
              </ul>

            </article>
          <article class="back" inert>
            <button onclick="turn()">
                <i class="fa-solid fa-angles-left"></i> go back
            </button>
             <ul class="content">
                <% custom.forEach(item => { %>
                    <% if (item.title == 'Content') { %>
                        <% item.content.forEach(content => { %>
                                <li>
                                    <h2>
                                        <%= content.title %>
                                    </h2>
                                    <p>
                                        <%= content.description %>
                                    </p>
                                </li>
                        <% }) %>
                    <% } %>
                <% }) %> 
            </ul>
          </article>
      </div>
  </section>

</div>

<%- include('./partials/foot') %>
